<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/view_row_items_card_elevation"
    android:padding="@dimen/view_row_items_card_padding"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/view_row_items_card_padding"
        android:layout_margin="@dimen/view_row_items_card_margin"
        android:text="@string/title"
        android:textSize="@dimen/view_row_items_title_size"
android:textColor="@color/black"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/txt_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/view_row_items_card_padding"
        android:layout_margin="@dimen/view_row_items_card_margin"
        android:text="@string/author"
        android:layout_gravity="end"
        android:textSize="@dimen/view_row_items_sub_title_size"
        />

        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_row_items_card_padding"
            android:layout_margin="@dimen/view_row_items_card_margin"
            android:text="@string/description"
            android:textSize="@dimen/view_row_items_content_size"
            android:textColor="@color/black"
            />


    </LinearLayout>
</androidx.cardview.widget.CardView>